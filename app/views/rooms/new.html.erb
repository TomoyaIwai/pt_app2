<section class="hero is-black">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規ルーム作成
      </h1>
    </div>
  </div>
</section>

<% if @room.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@room.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @room.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @room do |f| %>
          <div class="field">
            <%= f.label :title, "タイトル", class: "label" %>
            <%= f.text_field :title, class: "input", placeholder:"タイトル（40文字まで)", maxlength:"40" %>
          </div>

          <div class="field">
            <%= f.label :genre, "ジャンル", class: "label" %>
            <%= f.text_field :genre, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :age, "年齢", class: "label" %>
            <%= f.text_field :age, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :purpose, "目的", class: "label" %>
            <%= f.text_field :purpose, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :content, "メモ", class: "label" %>
            <%= f.text_area :content, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit 'ルーム作成', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>