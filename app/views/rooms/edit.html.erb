<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ルーム編集
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @room do |f| %>
          <div class="field">
            <%= f.label :title, "タイトル", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :genre, "所属", class: "label" %>
            <%= f.text_field :genre, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :age, "年齢", class: "label" %>
            <%= f.text_field :age, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :purpose, "目的", class: "label" %>
            <%= f.text_field :purpose, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :content, "メモ", class: "label" %>
            <%= f.text_area :content, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit '変更', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>